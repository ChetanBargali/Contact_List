<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=locals.title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/3a77035c43.js" crossorigin="anonymous"></script>
</head>
<body>
    
    <h1 id="page_heading">
        <i class="fa-solid fa-address-book"></i>
        My Contacts List
    </h1>

    <div class="list">
        <ul >
            <% for(let i of contact_list){%>
               <li class="contact">
                    <div class="details">
                        <p style="text-align: start;"><%=i.name%></p>
                        <p style="text-align: end;"><%=i.phone%></p>
                    </div>

                    <div class="delete_btn">
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fa-solid fa-rectangle-xmark delete"></i>
                        </a>
                    </div>
               </li> 
            <%}%>
        </ul>
    </div>

    <form action="/create_contacts" method="post">

        <input type="text" name="name" placeholder="Enter Name" required>
        <input type="number" name="phone" placeholder="Enter Phone" required>
        <button type="submit">Add</button>
    </form>

    <script src="/js/home.js"></script>
</body>
</html>